<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ToggleButton
        android:id="@+id/toggleButtonOnOff"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:hint="Handsteuerung"
        android:onClick="ToggleClickedOnOff"
        android:text="ToggleButton"
        android:textSize="50sp"
        android:textStyle="bold" />
	 
    <TextView
        android:id="@+id/textBatt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:lines="1"
        android:text="--.--"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewPTTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:text="--.--"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/EditTextDatum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberDecimal|datetime|text" />

    <EditText
        android:id="@+id/editRunTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editVerbrauch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false" />

    <ToggleButton
        android:id="@+id/tagNachtOnOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.23"
        android:hint="Automatische Tag / Nacht schaltung"
        android:onClick="DayNightOnOff"
        android:text="ToggleButton"
        android:textOff="@string/day_off"
        android:textOn="@string/day_on"
        android:textSize="25sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBoxStoerung"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:text="StÃ¶rung"
        android:textSize="40sp"
        android:typeface="normal" />

</LinearLayout>